<refentry xml:id="context.phar" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" role="noversion">
 <refnamediv>
  <refname>Les options du contexte Phar</refname>
  <refpurpose>Liste des options du contexte Phar</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <para>
   Les options de contexte pour le gestionnaire <literal>phar://</literal>.
  </para>
 </refsect1>

 <refsect1 role="options"><!-- {{{ -->
  &reftitle.options;
  <para>
   <variablelist>
    <varlistentry xml:id="context.phar.compress">
     <term>
      <parameter>compress</parameter>
      <type>int</type>
     </term>
     <listitem>
      <para>
       Une des <link linkend="phar.constants.compression">constantes de compression Phar</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.phar.metadata">
     <term>
      <parameter>metadata</parameter>
      <type>mixed</type>
     </term>
     <listitem>
      <para>
       Les méta-données Phar. Voir <function>Phar::setMetadata</function>.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1><!-- }}} -->
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><xref linkend="context.phar" /></member>
    <member><link linkend="phar.using.stream">Le flux Phar</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
 
