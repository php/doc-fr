<refentry role="variable" xml:id="reserved.variables.cookies" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>$_COOKIE</refname>
  <refpurpose>Cookies HTTP</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <para>
   Un tableau associatif de variables, passé au script courant, via des cookies
   HTTP.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example xml:id="variable.cookie.basic">
    <title>Exemple avec <varname>$_COOKIE</varname></title>
    <programlisting role="php">
<![CDATA[
<?php
echo 'Bonjour ' . htmlspecialchars($_COOKIE["name"]) . '!';
?>
]]>
    </programlisting>
    <simpara>
     En supposant que le cookie "name" a été défini précédemment
    </simpara>
    &example.outputs.similar;
    <screen>
<![CDATA[
Bonjour Yannick !
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
  &note.is-superglobal;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>setcookie</function></member>
    <member><link linkend="language.variables.external">Gestion des variables externes</link></member>
    <member><link linkend="book.filter">L'extension sur les filtres</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

