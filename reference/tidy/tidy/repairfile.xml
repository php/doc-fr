   </tgroup>
  </informaltable>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>tidy::repairFile</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$file = 'file.html';

$repaired = tidy_repair_file($file);
rename($file, $file . '.bak');

file_put_contents($file, $repaired);
?>
]]>
   </programlisting>
  </example>
 </para>
</refsect1>

