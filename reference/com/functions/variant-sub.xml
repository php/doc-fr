<refentry xml:id="function.variant-sub" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>variant_sub</refname>
  <refpurpose>Soustrait la valeur du variant de droite de la valeur de celui de gauche</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>variant</type><methodname>variant_sub</methodname>
   <methodparam><type>mixed</type><parameter>left</parameter></methodparam>
   <methodparam><type>mixed</type><parameter>right</parameter></methodparam>
  </methodsynopsis>
  <para>
   Soustrait <parameter>right</parameter> de <parameter>left</parameter>.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>left</parameter></term>
     <listitem>
      <para>
       L'opérande de gauche.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>right</parameter></term>
     <listitem>
      <para>
       L'opérande de droite.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
   &com.variant-arith;
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   <table>
    <title>Règles de soustraction des variants</title>
    <tgroup cols="2">
     <thead>
      <row>
       <entry>Si</entry>
       <entry>Alors</entry>
      </row>
     </thead>
     <tbody>
      <row>
       <entry>Les deux expressions sont des chaînes</entry>
       <entry>Soustraction</entry>
      </row>
      <row>
       <entry>Une expression est une chaîne et l'autre est un caractère</entry>
       <entry>Soustraction</entry>
      </row>
      <row>
       <entry>Une expression est numérique et l'autre est une chaîne</entry>
       <entry>Soustraction.</entry>
      </row>
      <row>
       <entry>Les deux expressions sont numériques</entry>
       <entry>Soustraction</entry>
      </row>
      <row>
       <entry>Une des expressions est NULL</entry>
       <entry>NULL est retourné</entry>
      </row>
      <row>
       <entry>Les deux expressions sont vides</entry>
       <entry>Une chaîne vide est retournée</entry>
      </row>
     </tbody>
    </tgroup>
   </table>
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Lève une <classname>com_exception</classname> en cas d'échec.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>variant_add</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

