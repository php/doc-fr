<refentry xml:id='samconnection.construct' xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>SAMConnection::__construct</refname>
  <refpurpose>
   Crée une nouvelle connexion à un serveur de messagerie
  </refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis>
   <methodname>SAMConnection::__construct</methodname>
   <void />
  </constructorsynopsis>
  <para>
   Crée un nouvel objet <classname>SAMConnection</classname>.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Création d'un nouvel objet de connexion SAM et une connexion à un serveur de messagerie</title>
    <programlisting role="php">
<![CDATA[
<?php

$conn = new SAMConnection();
$conn->connect(SAM_WMQ, array(SAM_HOST => localhost, SAM_PORT => 1414, SAM_BROKER => 'bull'));

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
</refentry>

