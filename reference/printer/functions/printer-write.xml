<refentry xml:id="function.printer-write" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>printer_write</refname>
  <refpurpose>Écrit des données sur l'imprimante</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>printer_write</methodname>
   <methodparam><type>resource</type><parameter>printer_handle</parameter></methodparam>
   <methodparam><type>string</type><parameter>content</parameter></methodparam>
  </methodsynopsis>
  <para>
   Écrit les données <parameter>content</parameter> directement sur l'imprimante.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>printer_handle</parameter></term>
     <listitem>
      <para>
       <parameter>printer_handle</parameter> doit être une ressource d'imprimante valide.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>content</parameter></term>
     <listitem>
      <para>
       Les données à écrire.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>printer_write</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$handle = printer_open();
printer_write($handle, "Texte à imprimer");
printer_close($handle);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

</refentry>

