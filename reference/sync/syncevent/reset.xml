<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="syncevent.reset">
 <refnamediv>
  <refname>SyncEvent::reset</refname>
  <refpurpose>Réinitialise manuellement un événement</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>SyncEvent::reset</methodname>
   <void/>
  </methodsynopsis>
  <simpara>
   Réinitialise un objet <classname>SyncEvent</classname> qui a été lancé/défini. Seulement valide pour
   les objets d'événement manuels.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   &return.success;
  </simpara>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemple avec <function>SyncEvent::reset</function></title>
   <programlisting role="php">
<![CDATA[
<?php
// Dans une application web :
$event = new SyncEvent("DemoApplication", true);
$event->wait();

// Dans un cron :
$event = new SyncEvent("DemoApplication", true);
$event->reset();
/* ... Effectuer quelques tâches de maintenance ... */
$event->fire();
?>
]]>
   </programlisting>
  </example>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><methodname>SyncEvent::fire</methodname></member>
   <member><methodname>SyncEvent::reset</methodname></member>
   <member><methodname>SyncEvent::wait</methodname></member>
  </simplelist>
 </refsect1>

</refentry>
