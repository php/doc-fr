  <refentry id="function.pdf-show">
   <refnamediv>
    <refname>pdf_show</refname>
    <refpurpose>Affiche le texte à la position courante</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Description</title>
     <methodsynopsis>
      <type>bool</type><methodname>pdf_show</methodname>
      <methodparam><type>resource</type><parameter>pdfdoc</parameter></methodparam>
      <methodparam><type>string</type><parameter>text</parameter></methodparam>
     </methodsynopsis>
    <para>
      <function>pdf_show</function> affiche le texte <parameter>text</parameter>
      à la position courante, et avec la police et sa taille courante.
    </para>
   </refsect1>
  </refentry>

