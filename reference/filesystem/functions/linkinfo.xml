   <example>
    <title>Exemple avec <function>linkinfo</function></title>
    <programlisting role="php">
<![CDATA[
<?php

echo linkinfo('/vmlinuz'); // 835

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

