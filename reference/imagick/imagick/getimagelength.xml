<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.imagick-getimagelength">
 <refnamediv>
  <refname>Imagick::getImageLength</refname>
  <refpurpose>Retourne la taille de l'image en octets</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>Imagick::getImageLength</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Retourne la taille de l'image en octets.
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne un entier.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>Imagick::getImageLength</function>:</title>
    <para>
     Récupère la taille de l'image, en octets
    </para>
    <programlisting role="php">
<![CDATA[
<?php
$image = new Imagick('test.jpg');
echo $image->getImageLength() . ' octets';
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

</refentry>

