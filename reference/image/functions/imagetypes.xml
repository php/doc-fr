 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <methodname>imagetypes</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php
if (imagetypes() & IMG_PNG) {
    echo "Le type PNG est supporté";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

