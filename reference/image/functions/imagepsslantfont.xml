 <refentry id="function.imagepsslantfont">
  <refnamediv>
   <refname>ImagePsSlantFont</refname>
   <refpurpose>
    Incline une police de caract&egrave;res
   </refpurpose>
  </refnamediv>
  <refsect1>
   <title>Description</title>
    <methodsynopsis>
     <type>bool</type><methodname>imagepsslantfont</methodname>
     <methodparam><type>resource</type><parameter>font</parameter></methodparam>
     <methodparam><type>float</type><parameter>slant</parameter></methodparam>
    </methodsynopsis>
   <para>
    <function>imagepsslantfont</function> met en italique
    la police de caract&egrave;res <parameter>font</parameter> avec
    le coefficient <parameter>slant</parameter>.
   </para>
  </refsect1>
 </refentry>

