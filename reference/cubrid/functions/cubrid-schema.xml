 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemple avec <function>cubrid_schema</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$attrs = cubrid_schema ($con, CUBRID_SCH_ATTRIBUTE, "person");
while (list($key, $value) = each($attrs)) {
   echo $value["NAME"];
   echo $value["DOMAIN"];
}
?>
]]>
   </programlisting>
  </example>
