<refentry xml:id="mpegfile.construct" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>KTaglib_MPEG_File::__construct</refname>
  <refpurpose>Ouvre un nouveau fichier</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis>
    <methodname>KTaglib_MPEG_File::__construct</methodname>
    <methodparam><type>string</type><parameter>filename</parameter></methodparam>
  </constructorsynopsis>
  <para>
   Ouvre un nouveau fichier MPEG.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
    <variablelist>
      <varlistentry>
        <term><parameter>filename</parameter></term>
        <listitem>
          <para>
           Le fichier à lire.
          </para>
        </listitem>
      </varlistentry>
    </variablelist>
  </para>
 </refsect1>
 <refsect1 role="examples">
   &reftitle.examples;
   <para>
     <example>
       <title>Ouvre un nouveau fichier MP3 et lit le titre</title>
       <programlisting role="php">
<![CDATA[
<?php
$mpeg = new KTaglib_MPEG_File('example.mp3');
echo $mpeg->getID3v1Tag()->getTitle();
?>
]]>
       </programlisting>
     </example>
   </para>
 </refsect1>

</refentry>

