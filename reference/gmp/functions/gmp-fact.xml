<refentry xml:id="function.gmp-fact" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>gmp_fact</refname>
  <refpurpose>Factorielle GMP</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>GMP</type><methodname>gmp_fact</methodname>
   <methodparam><type class="union"><type>GMP</type><type>int</type><type>string</type></type><parameter>num</parameter></methodparam>
  </methodsynopsis>
  <para>
   Calcule la factorielle de <parameter>num</parameter> : <literal>a!</literal>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>num</parameter></term>
     <listitem>
      <para>
       Le nombre factoriel.
      </para>
      &gmp.parameter;
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &gmp.return;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>gmp_fact</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$fact1 = gmp_fact(5); // 5 * 4 * 3 * 2 * 1
echo gmp_strval($fact1) . "\n";

$fact2 = gmp_fact(50); // 50 * 49 * 48, ... etc
echo gmp_strval($fact2) . "\n";
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
120
30414093201713378043612608166064768844377641568960512000000000000
]]>
    </screen>
   </example>
  </para>
 </refsect1>

</refentry>
