<refentry xml:id="function.newt-get-screen-size" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>newt_get_screen_size</refname>
  <refpurpose>Remplit les références passées avec la taille courante du terminal</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>newt_get_screen_size</methodname>
   <methodparam><type>int</type><parameter role="reference">cols</parameter></methodparam>
   <methodparam><type>int</type><parameter role="reference">rows</parameter></methodparam>
  </methodsynopsis>
  <para>
   Remplit les références passées avec la taille courante du terminal.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>cols</parameter></term>
     <listitem>
      <para>
       Nombre de colonnes dans le terminal
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>rows</parameter></term>
     <listitem>
      <para>
       Nombre de lignes dans le terminal
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>newt_get_screen_size</function></title>
    <para>
     Ce code affiche la taille de l'écran de votre terminal.
    </para>
    <programlisting role="php">
<![CDATA[
<?php
 newt_init();
 newt_get_screen_size (&$cols, &$rows);
 newt_finished();

 print "Votre taille de terminal est : {$cols}x{$rows}\n";
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
Votre taille de terminal est : 138x47
]]>
    </screen>
   </example>
  </para>
 </refsect1>

</refentry>

