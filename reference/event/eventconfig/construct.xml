<refentry xml:id="eventconfig.construct" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>EventConfig::__construct</refname>
  <refpurpose>Construit un objet EventConfig</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier>
   <methodname>EventConfig::__construct</methodname>
   <void />
  </methodsynopsis>
  <para>
   Construit un objet EventConfig qui pourra être passé
   au constructeur <methodname>EventBase::__construct</methodname>.
  </para>
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemple avec <function>EventConfig::__construct</function></title>
   <programlisting role="php">
<![CDATA[
<?php
// On ignore la méthode "select"
$cfg = new EventConfig();
if ($cfg->avoidMethod("select")) {
    echo "Méthode 'select' ignorée\n";
}

// Crée un event_base associé avec la configuration
$base = new EventBase($cfg);

/* Maintenant, $base est configuré pour ignorer la méthode select */
?>
]]>
   </programlisting>
  </example>
 </refsect1>
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member>
    <methodname>EventBase::__construct</methodname>
   </member>
  </simplelist>
 </refsect1>
</refentry>
