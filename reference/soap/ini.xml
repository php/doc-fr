  <table>
   <title>&ConfigureOptions; SOAP</title>
   <tgroup cols="4">
    <thead>
     <row>
      <entry>&Name;</entry>
      <entry>&Default;</entry>
      <entry>&Changeable;</entry>
      <entry>&Changelog;</entry>
     </row>
    </thead>
    <tbody xml:id="soap.configuration.list">
     <row>
      <entry><link linkend="ini.soap.wsdl-cache-enabled">soap.wsdl_cache_enabled</link></entry>
      <entry>1</entry>
