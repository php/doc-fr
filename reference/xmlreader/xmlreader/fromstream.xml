<refentry xml:id="xmlreader.fromstream" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>XMLReader::fromStream</refname>
  <refpurpose>Créer un <classname>XMLReader</classname> à partir d'un flux sur lequel lire</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="XMLReader">
   <modifier>public</modifier> <modifier>static</modifier> <type>static</type><methodname>XMLReader::fromStream</methodname>
   <methodparam><type>resource</type><parameter>stream</parameter></methodparam>
   <methodparam choice="opt"><type class="union"><type>string</type><type>null</type></type><parameter>encoding</parameter><initializer>&null;</initializer></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>flags</parameter><initializer>0</initializer></methodparam>
   <methodparam choice="opt"><type class="union"><type>string</type><type>null</type></type><parameter>documentUri</parameter><initializer>&null;</initializer></methodparam>
  </methodsynopsis>
  <simpara>
   Créer un <classname>XMLReader</classname> à partir d'un flux sur lequel lire.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>stream</parameter></term>
    <listitem>
     <simpara>
      Le flux à partir duquel lire le XML.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>encoding</parameter></term>
    <listitem>
     <simpara>
      L'encodage du document ou &null;.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>flags</parameter></term>
    <listitem>
     <simpara>
      Un masque de bits des constantes
      <constant>LIBXML_<replaceable>*</replaceable></constant>.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>documentUri</parameter></term>
    <listitem>
     <simpara>
      L'URI de base du document optionnel.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   Renvoie un <classname>XMLReader</classname>.
  </simpara>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <itemizedlist>
   <listitem>
    <simpara>
     Passer un <parameter>encoding</parameter> invalide lancera une
     <exceptionname>ValueError</exceptionname>.
    </simpara>
   </listitem>
   <listitem>
    <simpara>
     Passer une resource qui n'est pas un flux à <parameter>stream</parameter>
     lancera une <exceptionname>TypeError</exceptionname>.
    </simpara>
   </listitem>
  </itemizedlist>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><methodname>XMLReader::fromString</methodname></member>
   <member><methodname>XMLReader::fromUri</methodname></member>
  </simplelist>
 </refsect1>
</refentry>
