 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>strncmp</function></title>
    <programlisting role="php">
<![CDATA[
<?php
 
$var1 = 'Hello John';
$var2 = 'Hello Doe';
if (strncmp($var1, $var2, 5) === 0) {
    echo 'Les 5 premiers caractères de $var1 et $var2 sont égaux dans une comparaison de chaînes de caractères sensibles à la casse.';
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

