 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>strtolower</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$str = "Marie A un Petit Agneau, et l'aime TRès fORt.";
$str = strtolower($str);
echo $str; // marie a un petit agneau, et l'aime très fort.
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

