<refentry xml:id="splfileobject.rewind" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SplFileObject::rewind</refname>
  <refpurpose>Réinitialise le fichier à la première ligne</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="SplFileObject">
   <modifier>public</modifier> <type>void</type><methodname>SplFileObject::rewind</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Réinitialise le fichier à la première ligne.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Lance une exception <classname>RuntimeException</classname>
   si la réinitialisation a échoué.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <methodname>SplFileObject::rewind</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php
$file = new SplFileObject("misc.txt");

// Boucle sur le fichier
foreach ($file as $line) { }

// Se réinitialise sur la première ligne
$file->rewind();

// Affiche la première ligne
echo $file->current();
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>SplFileObject::current</methodname></member>
    <member><methodname>SplFileObject::key</methodname></member>
    <member><methodname>SplFileObject::seek</methodname></member>
    <member><methodname>SplFileObject::next</methodname></member>
    <member><methodname>SplFileObject::valid</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

