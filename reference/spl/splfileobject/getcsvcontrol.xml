 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <methodname>SplFileObject::getCsvControl</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php
$file = new SplFileObject("data.txt");
print_r($file->getCsvControl());
?>
]]>
    </programlisting>
    &example.outputs.similar;
