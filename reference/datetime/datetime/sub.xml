<refentry xml:id="datetime.sub" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>DateTime::sub</refname>
  <refpurpose>
   Soustrait une durée à un objet <classname>DateTime</classname>
  </refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>DateTime</type><methodname>DateTime::sub</methodname>
   <methodparam><type>DateInterval</type><parameter>interval</parameter></methodparam>
  </methodsynopsis>
  <methodsynopsis>
   <type>DateTime</type><methodname>date_sub</methodname>
   <methodparam><type>DateTime</type><parameter>object</parameter></methodparam>
   <methodparam><type>DateInterval</type><parameter>interval</parameter></methodparam>
  </methodsynopsis>
  <para>
   Soustrait la durée spécifiée par l'objet <classname>DateInterval</classname> 
   de l'objet <classname>DateTime</classname>.
  </para>
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   &date.datetime.description;
   <varlistentry>
    <term>
     <parameter>interval</parameter>
    </term>
    <listitem>
     <para>
      Un objet <classname>DateInterval</classname>
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne l'objet <classname>DateTime</classname> modifié.
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemple avec <function>date_sub</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$date = new DateTime('2000-01-20');
$date->sub(new DateInterval('P10D'));
echo $date->format('Y-m-d H:i:s') . "\n";

$date = new DateTime('2000-01-20');
$date->sub(new DateInterval('PT10H30S'));
echo $date->format('Y-m-d H:i:s') . "\n";

$date = new DateTime('2000-01-20');
$date->sub(new DateInterval('P7Y5M4DT4H3M2S'));
echo $date->format('Y-m-d H:i:s') . "\n";
?>
]]>
   </programlisting>
   &example.outputs;
   <screen>
<![CDATA[
2000-01-10 00:00:00
2000-01-19 13:59:30
1992-08-15 19:56:58
]]>
   </screen>
  </example>
 </refsect1>
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>DateTime::add</function></member>
   <member><function>DateTime::diff</function></member>
  </simplelist>
 </refsect1>
 
