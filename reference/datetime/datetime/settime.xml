<refentry xml:id="datetime.settime" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>DateTime::setTime</refname>
  <refpurpose>Assigne l'heure</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>DateTime</type><methodname>DateTime::setTime</methodname>
   <methodparam><type>int</type><parameter>hour</parameter></methodparam>
   <methodparam><type>int</type><parameter>minute</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>second</parameter></methodparam>
  </methodsynopsis>
  <methodsynopsis>
   <type>DateTime</type><methodname>date_time_set</methodname>
   <methodparam><type>DateTime</type><parameter>object</parameter></methodparam>
   <methodparam><type>int</type><parameter>hour</parameter></methodparam>
   <methodparam><type>int</type><parameter>minute</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>second</parameter></methodparam>
  </methodsynopsis>
  <para>
   Change le temps dans l'objet <classname>DateTime</classname>.
  </para>
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
   <variablelist>
    &date.datetime.description;
    <varlistentry>
     <term><parameter>hour</parameter></term>
     <listitem>
      <para>
       Heure du moment.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>minute</parameter></term>
     <listitem>
      <para>
       Minute du moment.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>second</parameter></term>
     <listitem>
      <para>
       Seconde du moment.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne l'objet <classname>DateTime</classname> modifié.
  </para>
 </refsect1>
 
