 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
   <example>
    <title>Changement de temps d'un objet <classname>DateTime</classname></title>
    <programlisting role="php">
<![CDATA[
<?php
$date = new DateTime('2000-01-01');
echo $date->format('Y-m-d H:i:s') . "\n";

$date->setTime(14, 55);
echo $date->format('Y-m-d H:i:s') . "\n";

$date->setTime(14, 55, 24);
echo $date->format('Y-m-d H:i:s') . "\n";

// Les valeurs qui dépassent l'echelle sont ajoutées aux valeurs parentes.
$date->setTime(14, 65, 24);
echo $date->format('Y-m-d H:i:s') . "\n";
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
2000-01-01 00:00:00
2000-01-01 14:55:00
2000-01-01 14:55:24
2000-01-01 15:05:24
]]>
    </screen>
   </example>
 </refsect1>
 
