  <refsect1 role="examples">
   &reftitle.examples;
   <example>
    <title>Exemple avec <function>exif_imagetype</function></title>
    <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'Cette image n\'est pas un gif';
}
?>
]]>
    </programlisting>
   </example>
