 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemple avec <function>Yaf_View_Simple::__constructor</function></title>
   <programlisting role="php">
<![CDATA[
<?php
   define ("TEMPLATE_DIRECTORY", APPLICATOIN_PATH . '/views');
   $view = new Yaf_View_Simple(TEMPLATE_DIRECTORY, array(
                           'short_tag' => false //N'autorise pas l'utilisation des balises courtes dans le template
   ));
?>
]]>
   </programlisting>
  </example>
 </refsect1>

</refentry>

