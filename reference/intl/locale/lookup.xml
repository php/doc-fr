 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemple avec <function>locale_lookup</function>, procédural</title>
   <programlisting role="php">
<![CDATA[
<?php
$arr = array(
    'de-DEVA',
    'de-DE-1996',
    'de',
    'de-De'
);
echo locale_lookup($arr, 'de-DE-1996-x-prv1-prv2', true, 'en_US');
?>
]]>
   </programlisting>
  </example>
  <example>
   <title>Exemple avec <methodname>Locale::lookup</methodname>, POO</title>
   <programlisting role="php">
<![CDATA[
<?php
$arr = array(
    'de-DEVA',
    'de-DE-1996',
    'de',
    'de-De'
);
echo Locale::lookup($arr, 'de-DE-1996-x-prv1-prv2', true, 'en_US');
?>
]]>
   </programlisting>
  </example>
  &example.outputs;
  <screen>
<![CDATA[
de_de_1996
]]>
  </screen>
 </refsect1>

