<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.ssh2-sftp-readlink">
 <refnamediv>
  <refname>ssh2_sftp_readlink</refname>
  <refpurpose>Retourne la cible d'un lien symbolique</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>ssh2_sftp_readlink</methodname>
   <methodparam><type>resource</type><parameter>sftp</parameter></methodparam>
   <methodparam><type>string</type><parameter>link</parameter></methodparam>
  </methodsynopsis>
  <para>
   Retourne la cible d'un lien symbolique.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>sftp</parameter></term>
    <listitem>
     <para>
      Une ressource SSH2 SFTP, ouverte par la fonction <function>ssh2_sftp</function>.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>link</parameter></term>
    <listitem>
     <para>
      Chemin vers le lien symbolique.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne la cible du lien symbolique <parameter>link</parameter>.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Lecture d'un lien symbolique</title>
   <programlisting role="php">
<![CDATA[
<?php
$connection = ssh2_connect('shell.example.com', 22);
ssh2_auth_password($connection, 'username', 'password');
$sftp = ssh2_sftp($connection);

$target = ssh2_sftp_readlink($sftp, '/tmp/mysql.sock');
/* $target est maintenant (e.g.): '/var/run/mysql.sock' */
?>
]]>
   </programlisting>
  </example>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>readlink</function></member>
   <member><function>ssh2_sftp_symlink</function></member>
  </simplelist>
 </refsect1>

</refentry>
