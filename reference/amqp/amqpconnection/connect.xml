<refentry xml:id="amqpconnection.connect" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>AMQPConnection::connect</refname>
  <refpurpose>Établit une connexion avec le courtier AMQP</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>AMQPConnection::connect</methodname>
   <void />
  </methodsynopsis>
  <para>
   Cette méthode instancie une connexion avec le courtier AMQP.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <methodname>AMQPConnection::connect</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php

/* Création d'une nouvelle connexion */
$cnn = new AMQPConnection();

// Définit l'identifiant/mot de passe
$cnn->setLogin('mylogin');
$cnn->setPassword('mypass');

if ($cnn->connect()) {
    echo "Connexion établie avec le courtier";
}
else {
    echo "Connexion impossible avec le courtier";
}


?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>


</refentry>

