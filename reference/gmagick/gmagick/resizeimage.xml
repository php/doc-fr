<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="gmagick.resizeimage">
 <refnamediv>
  <refname>Gmagick::resizeimage</refname>
  <refpurpose>Redimensionne une image</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>Gmagick</type><methodname>Gmagick::resizeimage</methodname>
   <methodparam><type>int</type><parameter>width</parameter></methodparam>
   <methodparam><type>int</type><parameter>height</parameter></methodparam>
   <methodparam><type>int</type><parameter>filter</parameter></methodparam>
   <methodparam><type>float</type><parameter>blur</parameter></methodparam>
   <methodparam choice="opt"><type>bool</type><parameter>fit</parameter><initializer>&false;</initializer></methodparam>
  </methodsynopsis>
  <simpara>
   Redimensionne une image aux dimensions voulues, avec un filtre.
  </simpara>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>width</parameter></term>
    <listitem>
     <simpara>
      Le nombre de colonnes dans l'image redimensionnée.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>height</parameter></term>
    <listitem>
     <simpara>
      Le nombre de lignes dans l'image redimensionnée.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>filter</parameter></term>
    <listitem>
     <simpara>
      Le filtre de l'image à utiliser.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>blur</parameter></term>
    <listitem>
     <simpara>
      Le facteur de flou, où les valeurs supérieures à 1 correspond
      à entièrement flou, et les valeurs inférieures à 1, l'inverse.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   L'objet <classname>Gmagick</classname>.
  </simpara>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <simpara>
   &gmagick.gmagickexception.throw;
  </simpara>
 </refsect1>

</refentry>
