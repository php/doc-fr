<refentry xml:id="gmagick.setimagedepth" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Gmagick::setimagedepth</refname>
  <refpurpose>Définit la profondeur de l'image</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>Gmagick</type><methodname>Gmagick::setimagedepth</methodname>
   <methodparam><type>int</type><parameter>depth</parameter></methodparam>
  </methodsynopsis>
  <para>
   Définit la profondeur de l'image.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>depth</parameter></term>
     <listitem>
      <para>
       La profondeur de l'image, en octets : 8, 16, ou 32.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   L'objet <classname>Gmagick</classname>.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   &gmagick.gmagickexception.throw;
  </para>
 </refsect1>

</refentry>

