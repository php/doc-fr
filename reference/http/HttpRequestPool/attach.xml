<refentry xml:id="function.httprequestpool-attach" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HttpRequestPool::attach</refname>
  <refpurpose>Attache un objet HttpRequest</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier>
   <type>bool</type><methodname>HttpRequestPool::attach</methodname>
   <methodparam><type>HttpRequest</type><parameter>request</parameter></methodparam>
  </methodsynopsis>

  <para>
   Attache un objet HttpRequest à ce HttpRequestPool.
  </para>
  <warning>
   <para>
    Définissez toutes les options avant d'effectuer l'attachement !
   </para>
  </warning>

 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>request</parameter></term>
     <listitem>
      <para>
       un objet HttpRequest qui n'est pas déjà attaché à un objet HttpRequestPool
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Lance une exception HttpInvalidParamException, HttpRequestException,
   HttpRequestPoolException, HttpEncodingException.
  </para>
 </refsect1>
</refentry>

