<refentry xml:id="reflectiongenerator.getexecutinggenerator" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionGenerator::getExecutingGenerator</refname>
  <refpurpose>Récupère l'objet <classname>Generator</classname> exécuté</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="ReflectionGenerator">
   <modifier>public</modifier> <type>Generator</type><methodname>ReflectionGenerator::getExecutingGenerator</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Récupère l'objet <classname>Generator</classname> exécuté.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne l'objet <classname>Generator</classname> actuellement exécuté.
  </para>
 </refsect1>

  <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <methodname>ReflectionGenerator::getExecutingGenerator</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php

class GenExample
{
    public function gen()
    {
        yield 1;
    }
}

$gen = (new GenExample)->gen();

$reflectionGen = new ReflectionGenerator($gen);

$gen2 = $reflectionGen->getExecutingGenerator();

var_dump($gen2 === $gen);
var_dump($gen2->current());
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
bool(true)
int(1);
]]>
    </screen>
   </example>
  </para>
 </refsect1>

