<refentry xml:id="reflectionextension.construct" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionExtension::__construct</refname>
  <refpurpose>Construit un nouvel objet ReflectionExtension</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis role="ReflectionExtension">
   <modifier>public</modifier> <methodname>ReflectionExtension::__construct</methodname>
   <methodparam><type>string</type><parameter>name</parameter></methodparam>
  </constructorsynopsis>
  <para>
   Construit un &object; <classname>ReflectionExtension</classname>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>name</parameter></term>
     <listitem>
      <para>
       Nom de l'extension.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <classname>ReflectionExtension</classname></title>
    <programlisting role="php">
<![CDATA[
<?php
$ext = new ReflectionExtension('Reflection');

printf('Extension: %s (version: %s)', $ext->getName(), $ext->getVersion());
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Extension: Reflection (version: $Revision$)
]]>
    </screen>
   </example>
  </para>
 </refsect1> 
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>ReflectionExtension::info</methodname></member>
    <member><link linkend="language.oop5.decon.constructor">Les constructeurs</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
