<refentry xml:id="reflectionclass.getdoccomment" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionClass::getDocComment</refname>
  <refpurpose>Récupère les commentaires</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>string</type><methodname>ReflectionClass::getDocComment</methodname>
   <void />
  </methodsynopsis>
  <para>
   Récupère les commentaires depuis une classe.
  </para>
  
  &warn.undocumented.func;
  
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Le commentaire, si il existe, &false; sinon.
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <methodname>ReflectionClass::getDocComment</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php
/** 
* Une classe de test
*
* @param  foo bar
* @return baz
*/
class TestClass { }

$rc = new ReflectionClass('TestClass'); 
var_dump($rc->getDocComment())
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
string(55) "/** 
* Une classe de test
*
* @param  foo bar
* @return baz
*/"
]]>
    </screen>
   </example>
  </para>
 </refsect1>
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>ReflectionClass::getName</methodname></member>
   </simplelist>
  </para>
 </refsect1>
 
</refentry>

