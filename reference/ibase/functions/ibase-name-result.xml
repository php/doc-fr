<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.ibase-name-result">
 <refnamediv>
  <refname>ibase_name_result</refname>
  <refpurpose>Assigne un nom à un jeu de résultats iBase</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>ibase_name_result</methodname>
   <methodparam><type>resource</type><parameter>result</parameter></methodparam>
   <methodparam><type>string</type><parameter>name</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Assigne un nom à un jeu de résultats. Ce nom peut être
   utilisé plus tard dans les requêtes de type
   <literal>UPDATE|DELETE ... WHERE CURRENT OF</literal> <parameter>name</parameter>.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>result</parameter></term>
    <listitem>
     <simpara>
      Un jeu de résultats InterBase.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>name</parameter></term>
    <listitem>
     <simpara>
      Le nom à assigner.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   &return.success;
  </simpara>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemple avec <function>ibase_name_result</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$result = ibase_query("SELECT field1,field2 FROM table FOR UPDATE");
ibase_name_result($result, "my_cursor");

$updateqry = ibase_prepare("UPDATE table SET field2 = ? WHERE CURRENT OF my_cursor");

for ($i = 0; ibase_fetch_row($result); ++$i) {
    ibase_execute($updateqry, $i);
}
?>
]]>
   </programlisting>
  </example>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>ibase_prepare</function></member>
   <member><function>ibase_execute</function></member>
  </simplelist>
 </refsect1>

</refentry>
